{
  "manifest_version": 3,
  "name": "X Unbookmarker",
  "version": "1.0",
  "description": "Automates the process of removing bookmarks on X (Twitter).",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "X Unbookmarker"
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/i/bookmarks",
        "https://twitter.com/i/bookmarks"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
